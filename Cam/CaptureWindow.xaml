<Window x:Class="StreamRC.Cam.CaptureWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cam="clr-namespace:StreamRC.Cam"
        xmlns:capture="clr-namespace:StreamRC.Cam.Capture"
        Name="wnd"
    Title="Capture" Height="532.766" Width="640">
    <Window.Resources>
        <cam:ScaleConverter x:Key="conv"/>
    </Window.Resources>
    <Grid>
        <capture:CapPlayer x:Name="player" Margin="0,64,0,0" />
        <Label x:Name="lblDevice" Content="Device" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="166"/>
        <Label x:Name="lblFrames" Content="Frame Delay" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="166"/>
        <TextBox x:Name="txtFrames" Height="23" Margin="0,36,10,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="166" HorizontalContentAlignment="Right" TextChanged="txtFrames_TextChanged"/>
        <ComboBox x:Name="cmbDevices" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="441" SelectionChanged="cmbDevices_SelectionChanged"/>

    </Grid>
</Window>
