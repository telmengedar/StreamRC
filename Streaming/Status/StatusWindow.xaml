        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:StreamRC.Core.UI;assembly=StreamRC.Core"
        mc:Ignorable="d"
        Title="Status" Height="300" Width="401.6" ShowActivated="False">
